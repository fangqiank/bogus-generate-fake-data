@page "/people"
@using Bogus_Data.Data;
@inject DataGenerator _data

<h3>People</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Credit Rating</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var p in people)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>
                <td>@p.Email</td>
                <td>@p.Phone</td>
                <td>@p.Address</td>
                <td>@p.City</td>
                <td>@p.StateAbbr</td>
                <td>@p.ZipCode</td>
                <td>@p.Rating</td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-outline-info" @onclick="LoadData">Load More Data</button>

@code {
    List<PersonModel> people = new();

    private void LoadData()
    {
        var result = _data.GeneatorMultiRecords().Take(100);
        people.AddRange(result);
    }
}
